%section.content-header
  %h1 系统首页
%section.content
  .row
    .col-lg-3.col-xs-6
      .info-box
        %span.info-box-icon.bg-aqua
          %i.fa.fa-file-text-o
        .info-box-content
          %span.info-box-text 所有项目
          %span.info-box-number
            = @projects.size
    .col-lg-3.col-xs-6
      .info-box
        %span.info-box-icon.bg-aqua
          %i.fa.fa-tasks
        .info-box-content
          %span.info-box-text 我的任务
          %span.info-box-number
            = @projects.size
    .col-md-12
      .box
        .box-header.with-border
          %h3.box-title 待处理事务/已办事项
        .box-body
          .row
            .col-lg-3.col-xs-6
              = link_to projects_url do
                .row
                  .col-md-10
                    我的项目
                  .col-md-1
                    = @current_user.projects.size
            .col-lg-3.col-xs-6
              = link_to approving_projects_url do
                .row
                  .col-md-10
                    我的申请
                  .col-md-1
                    = @current_user.projects.approving.size
            .col-lg-3.col-xs-6
              = link_to todo_projects_url do
                .row
                  .col-md-10
                    我的待办
                  .col-md-1
                    = Project.todo(current_user.id).size
    .col-md-12
      .box
        .box-header.with-border
          %h3.box-title 快捷入口
        .box-body
          = link_to approving_projects_url, class: "btn btn-app" do
            %i.fa.fa-tasks
            发起流程
          = link_to approving_projects_url, class: "btn btn-app" do
            %i.fa.fa-tasks
            发起变更流程
          = link_to users_url, class: "btn btn-app" do
            %i.fa.fa-user-o
            用户管理
    .col-md-12
      .box
        .box-header.with-border
          %h3.box-title 项目统计
        .box-body
    .col-md-12
      .box
        .box-header.with-border
          %h3.box-title 人力成本统计
        .box-body
          .box-header
            .row
              .col-md-4
                .col-md-7
                  %h4 项目列表
                  %p
                  %h5 TOP前五项目排名
                  %p
                  %a{:href => "#"} 智能云项目
                  %p
                  %a{:href => "#"} OPPO
                  %p
                  %a{:href => "#"} 智能云项目
                  %p
                  %a{:href => "#"} OPPO
                .col-md-5
                  .row
                    .col-md-8
                      %input.form-control{:type => "text"}/
                    .col-md-4
                      %button.btn.btn-primary{:type => "submit"} 搜索
                  %h6 本月成本总数
                  %h4 10000
                  %h6 ↑50%同比上月
                  %p
                  %h6 本周成本数量
                  %h4 1000
                  %h6 ↓50%同比上周
              .col-md-7
                .elements-on-right.row
                  %a{:href => "#"}> 本周 
                  = succeed "\u{a0}\u{a0}\u{a0}" do
                    %a{:href => "#"} 本月
                  = succeed "\u{a0}\u{a0}\u{a0}" do
                    %a{:href => "#"} 季度
                  = datetime_local_field(:user, :graduation_day)

                %div
                  %span 近一周数据统计
                  #main{:style => "width: 100%;height:400px;"}
                .chart-area
                  .chartjs-size-monitor
                    .chartjs-size-monitor-expand
                      %div
                    .chartjs-size-monitor-shrink
                      %div
                  














