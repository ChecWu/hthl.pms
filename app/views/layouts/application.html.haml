!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %title HTHL PMS-主页
  %body.skin-blue.sidebar-mini
    - if notice
      .callout.callout-info.margin-bottom-none{:role => "alert"}= notice
    - if alert
      .callout.callout-info.margin-bottom-none{:role => "alert"}= alert
    .wrapper
      %header.main-header
        = link_to root_path, class: 'logo' do
          %span.logo-mini PMS
          %span.logo-lg
            %b> HTHL
            \.PMS
        %nav.navbar.navbar-static-top
          .navbar-custom-menu
            %ul.nav.navbar-nav
              %li.dropdown.user.user-menu
                = link_to "#", class: "dropdown-toggle", 'data-toggle': "dropdown" do
                  = image_tag "a3", class: "user-image", alt: "User Image"
                  %span.hidden-xs
                    = current_user.name
              %li.dropdown.user.user-menu
                = link_to "退出登录", destroy_user_session_url, class: "btn btn-primary"
      %aside.main-sidebar
        %section.sidebar
          %ul.sidebar-menu.tree{'data-widget': 'tree'}
            - if true == true 
              %li
                = link_to root_path do
                  %i.fa.fa-dashboard 
                  %span 仪表盘
              %li.treeview
                = link_to '#' do 
                  %i.fa.fa-cubes
                  %span 项目管理
                  %span.pull-right-container
                    %i.fa.fa-angle-left.pull-right
                %ul.treeview-menu
                  %li
                    = link_to approving_projects_url do
                      %i.fa.fa-plus
                      %span 我的申请
                  %li
                    = link_to project_projects_url do
                      %i.fa.fa-cubes
                      %span 我的项目
                  %li
                    = link_to todo_projects_url do
                      %i.fa.fa-check-square
                      %span 我的待办
                  %li
                    = link_to costs_index_url do
                      %i.fa.fa-cny
                      %span 成本管理
              %li.treevie
                = link_to documents_url do
                  %i.fa.fa-archive
                  %span 文档列表
              %li.treevie
                = link_to customer_contacts_url do
                  %i.fa.fa-user
                  %span 客户管理
              %li.treeview
                = link_to '#' do
                  %i.fa.fa-cog
                  %span 账户设置
                  %span.pull-right-container
                    %i.fa.fa-angle-left.pull-right
                %ul.treeview-menu
                  %li
                    = link_to users_url do
                      %i.fa.fa-user
                      %span 用户管理
                  %li
                    = link_to roles_url do
                      %i.fa.fa-users
                      %span 角色管理
                  %li
                    = link_to edit_user_url(current_user, {by: :update_password}) do
                      %i.fa.fa-lock
                      %span 修改个人密码
                  %li
                    = link_to edit_user_url(current_user) do
                      %i.fa.fa-info
                      %span 修改个人信息
      .content-wrapper
        = yield