%section.content-header
  %h1
    = @page_title
%section.content
  .box
    = form_with url: costs_index_path, method: :get do |f|
      .box-header
        .col-md-6
          %h3.box-title 筛选查询
        .col-md-6
          .pull-right-container
            = f.submit "查询", class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5", id: "action_query"
      .box-body
        .row
          .col-md-4
            .form-group
              %label 姓名:
              = f.text_field :name, class: "form-control"        
  .box#costs_list
    = render 'list'
