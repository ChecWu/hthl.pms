.box-header
  .row
    .col-md-6
      %h3.box-title 数据列表
    .col-md-6
      .pull-right-container
        

.box-body
  %table.table.table-hover
    %tbody
      %tr
        %td 编号
        %td 岗位名称
        %td 姓名
        %td 级别
        %td 项目名称
        %td 单位名称
        %td 售前/售后
        %td 人天
        %td 单价(元)
        %td 合计/元(0.00)
    - @project_users.each do |project_user|
      %tr
        %td
          = project_user.id
        %td
          = "岗位"
        %td
          = project_user.user.name
        %td
          = ""
        %td
          = project_user.project.name
        %td
          = project_user.project.customer.name
        %td
          = ""
        %td
          - if project_user.project.time_limit?
            = project_user.project.time_limit
          - else
            = ""
        %td
          - if project_user.user.price?
            = project_user.user.price
          - else
            = ""
          
        %td
          - if project_user.user.price?
            = project_user.project.time_limit * project_user.user.price
          - else
            = project_user.project.time_limit * 1


.box-footer.clearfix
  =paginate @project_users

