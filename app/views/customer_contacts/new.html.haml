#content-wrapper
  .container-fluid
    .card.mb-12.col-md-12
      .card-header
        %h3 添加客户信息
      .card-body
        .row
          .col-md-6
            .box
              = form_for @customer_contact, html: {class: "form-horizontal"} do |f|
                .box-body
                  .form-group
                    = f.label :客户单位, class: 'col-sm-3 control-label'
                    .col-sm-9
                      .input-group
                        = f.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name, params[:customer_id]),
                        { include_blank: "请选择客户单位" }, class: "form-control"
                        %span.input-group-addon
                          %i.fa.fa-plus
                  .form-group
                    = f.label :联系人姓名, class: 'col-sm-3 control-label'
                    .col-sm-9
                      = f.text_field :name, class: "form-control"

                  .form-group
                    = f.label :职位, class: 'col-sm-3 control-label'
                    .col-sm-9
                      = f.text_field :name, class: "form-control"
                  .form-group
                    = f.label :邮件, class: 'col-sm-3 control-label'
                    .col-sm-9
                      = f.email_field :name, class: "form-control"
                  .form-group
                    = f.label :支持地址 , class: 'col-sm-3 control-label'
                    .col-sm-9
                      = f.text_field :name, class: "form-control"
                .box-footer
                  = f.submit "保存", class: 'btn btn-primary pull-right'