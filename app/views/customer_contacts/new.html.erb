<div class="container-fluid">
  <div class="card mb-3">
    <div class="card-header">
    <i class="fas fa-chart-area"></i>添加客户信息
    </div>
    <div class="card-body" >
    <%= form_for :customer, url: customer_contacts_path do |f| %> 
    <div class="form-group">
      <%= f.label :单位名称 %><br>
      <%= f.text_field :name, class:"form-control", placeholder:"请输入单位名称" %>
    </div>
    
    <%= f.fields_for :customer_contacts do |customer_contact| %>
    <div class="form-group">
      <%= customer_contact.label :联系人 %><br>
      <%= customer_contact.text_field :name, class:"form-control", placeholder:"请输入联系人名称" %>
    </div>

    <label for="exampleInputPassword1">客户电话</label></dr>
     <div class="form-inline">
       <%= customer_contact.text_field :telephone, class:"form-control col-md-6 col-xs-4", placeholder:"请输入客户号码" %>
       <%= customer_contact.text_field :phone_number, class:"form-control col-md-6 col-xs-4", placeholder:"请输入客户手机号码" %>
     </div>  </br>
     <%= customer_contact.text_field :other_phone, class:"form-control", placeholder:"请输入客户其它号码" %>
    </div>


    <div class="form-group">
      <%= customer_contact.label :邮箱地址 %><br>
      <%= customer_contact.text_field :email, class:"form-control", placeholder:"请输入邮箱地址" %>
    </div>

    <div class="form-group">
      <%= customer_contact.label :客户职位 %><br>
      <%= customer_contact.text_field :position, class:"form-control", placeholder:"请输入客户职位" %>
    </div>

    <div class="form-group">
      <%= customer_contact.label :支持地址 %><br>
      <%= customer_contact.text_area :address, size: "24x6", class: "form-control" %>
    </div>
    <% end %>
    <p><%= f.submit class:"btn btn-w-m btn-info" %></p></br></br>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <% end %>
    </div>
  </div>
</div>