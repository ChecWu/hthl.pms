.box-header
  .row
    .col-md-6
      %h3.box-title 数据列表
    .col-md-6
      .pull-right-container
      = link_to "发起流程申请", new_project_path, class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5"
.box-body
  %table.table.table-hover
    %tbody
      %tr
        %td 编号
        %td 项目名称
        %td 项目编号
        %td 处理状态
        %td 单位名称
        %td 支持地址
        %td 事项
        %td 开始时间
        %td 结束时间
        %td 操作
    - @projects.each do |project|
      %tr
        %td
          = project.id
        %td
          - if action_name.eql? 'index'
            = link_to project.name, project_details_project_url(project)
          - else 
            = project.name
        %td
          = project.number
        %td
          = project.status_name
        %td
          = project.customer.name
        %td
          = project.customer.customer_contacts.first&.address
        %td
          = project.support_details
        %td
          = project.approved_at
        %td
          = project.done_at
        %td
          - if action_name.eql? "approving"
            = link_to '查看', edit_project_path(project)
            = link_to "编辑", edit_project_path(project)
          -if action_name.eql? "project"
            = link_to '查看', show_my_project_project_path(project)
            = link_to "编辑", edit_project_path(project)
          - if action_name.eql? "todo"
            = link_to "审核", audit_project_path(project)
            = link_to "删除", projects_path(project),
                  method: :delete,
                  data: { confirm: 'Are you user?' }
          
.box-footer.clearfix
  =paginate @projects