%section.content-header
  %h1
    = @page_title
%section.content
  .box
    = form_with url: users_path, method: :get do |f|
      .box-header
        .col-md-6
          %h3.box-title 筛选查询
        .col-md-6
          .pull-right-container
            = f.submit "查询", class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5", id: "action_query"
      .box-body
        .row
          .col-md-4
            .form-group
              %label 用户名:
              = f.text_field :user_name, class: "form-control"
          .col-md-4
            .form-group
              %label 部门:
              = f.select :department_name, options_for_select(Department.all.map(&:name), params[:department]), {include_blank: "全部部门"},
              class: "form-control select2 select2-hidden-accessible", style: "width: 100%;", "data-select2-id": "1", tabindex:"-1", "aria-hidden": "true"
  .box
    .box-header
      .row
        .col-md-6
          %h3.box-title 数据列表
        .col-md-6
          .pull-right-container
            = link_to "添加", new_user_path, class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5"
    .box-body#users_list
      = render 'list'



