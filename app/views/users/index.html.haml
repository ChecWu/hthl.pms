%section.content-header
  %h1
    = @page_title
%section.content
  .box
    = form_with url: users_path, method: :get do |f|
      .box-header
        .col-md-6
          %h3.box-title 筛选查询
        .col-md-6
          .pull-right-container
            = f.submit "查询", class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5", id: "action_query"
      .box-body
        .col-md-4
          .form-group
            %label 用户名:
            = f.text_field :user_email, class: "form-control"
        .col-md-4
          .form-group
            %label 部门:
            = f.select :department_id, options_for_select(Department.all.collect{|d| [d.name, d.id] }, params[:department_id]), {include_blank: "全部部门"},
            class: "form-control select2 select2-accessible", style: "width: 100%;", "data-select2-id": "1", tabindex:"-1", "aria-hidden": "true"
  .box#users_list
    = render 'list'

