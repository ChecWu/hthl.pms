.container-fluid
  .card.mb-3
    .card-header
      %i.fas.fa-chart-area
      %h3 修改个人信息
      .card-body.col-md-6
        = form_for @user do |f|
          %input{type: :hidden, name: :by, value: :update}
          .form-group
            = f.label :真实名字
            %br/
            = f.text_field :name, class:"form-control", placeholder:"请输入角色名称"
          .form-group
            = f.label :邮箱
            %br/
            = f.text_field :email, disabled: true, class:"form-control", placeholder:"请输入邮箱"
          .form-group
            = f.label :请选择角色类型
            %br/
            = f.select(:role_id, [['admin', 1], ['test', 2]], {}, class:"form-control" )
          .form-group
            = f.label :请选择性别
            %br/
            = f.select(:sex, User.sex_options, {}, class:"form-control" )
          .form-group
            = f.label :电话
            %br/
            = f.text_field :phone_number,
              class:"form-control", placeholder:"请输入电话"
          .form-group
            = f.label :备注信息
            %br/
            = f.text_area :explain, size: "24x6", class: "form-control"
          %p= f.submit "保存", class:"btn btn-w-m btn-info"
