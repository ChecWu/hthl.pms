%section.content-header
  %h1
    查询客户
%section.content
  .box
    = form_with url: customers_url, method: :get do |f|
      .box-header
        .col-md-6
          %h3.box-title 筛选查询
        .col-md-6
          .pull-right-container
            = f.submit "查询", class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5", id: "action_query"
      .box-body
        .col-md-4
          .form-group
            %label 单位名称:
            = f.text_field :name, class: "form-control"
  .box#customers_list
    = render 'list'
  #customer_contacts_list
    - if @customer_contacts
      = render 'customer_contacts/list'

