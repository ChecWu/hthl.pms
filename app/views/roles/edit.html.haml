.container-fluid
  .card.mb-3
    .card-header
      %i.fas.fa-chart-area
      %h3 修改角色
    .card-body.col-md-6
      = form_for(@role) do |f|
        .form-group
          = f.label :角色名称
          %br/
          = f.text_field :name, class:"form-control", placeholder:"请输入角色名称"
        .form-group
          = f.label :角色定义说明
          %br/
          = f.text_area :explain, size: "24x6", class: "form-control"
        %p= f.submit "保存", class:"btn btn-w-m btn-info"
