= form_for @role, html: {class: "form-horizontal"} do |f|
  - if @role.errors.any?
    #error_explanation
      %h2
        = pluralize(@role.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :角色名称, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :name, class:"form-control", placeholder:"请输入角色名称"
  .form-group
    = f.label :角色定义说明, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_area :explain, size: "24x6", class: "form-control"
  = f.submit "保存", class:"btn btn-primary pull-right"